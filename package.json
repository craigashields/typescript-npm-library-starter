{
  "name": "typescript-npm-library-starter",
  "version": "1.0.0",
  "description": "TypeScript library npm package starter template with CI/CD",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "lint": "tsc",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "workflows",
    "actions",
    "typescript",
    "starter",
    "npm",
    "library",
    "boilerplate",
    "CI/CD",
    "vitest",
    "changesets"
  ],
  "author": "Craig Shields",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/craigashields/typescript-npm-library-starter.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  }
}
